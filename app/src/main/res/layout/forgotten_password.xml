<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp"/>

    <TextView
        android:id="@+id/subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe oublié"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_guideline"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veuillez saisir votre email"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subscribe"
        android:gravity="center"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/bottom_forget_password_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" afin de réinitialiser votre mot de passe"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message"
        android:gravity="center"
        />



    <EditText
        android:id="@+id/user_email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="E-mail"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/bottom_forget_password_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/token"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Token"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/bottom_forget_password_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Mot de passe"
        app:layout_constraintTop_toBottomOf="@+id/user_email"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/user_password_verification"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Mot de passe"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/user_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPassword" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/request_token_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button_home_shape"
        android:backgroundTint="#5D63DE"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Réintialiser mon mot de passe"
        android:fontFamily="@font/proxima_nova_font"
        app:layout_constraintTop_toBottomOf="@+id/bottom_forget_password_message"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_password_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button_home_shape"
        android:backgroundTint="#5D63DE"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Réinitialiser"
        android:fontFamily="@font/proxima_nova_font"
        app:layout_constraintTop_toBottomOf="@+id/user_password"
        />

</androidx.constraintlayout.widget.ConstraintLayout>