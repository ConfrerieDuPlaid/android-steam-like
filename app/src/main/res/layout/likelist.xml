<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/likes"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LikeList">



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/like_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="250dp" />


    <ImageView
        android:id="@+id/like_image"
        style="@style/ViewIcon"
        app:layout_constraintTop_toTopOf="@+id/like_guide_line"
        android:src="@drawable/empty_likes"/>

    <TextView
        android:id="@+id/empty_like_text"
        style="@style/Subtitle"
        android:text="Vous n'avez pas encore likÃ© de contenu. Cliquez sur le coeur pour en rajouter"
        app:layout_constraintTop_toBottomOf="@+id/like_image" />

    <include
        android:id="@+id/game_list"
        layout="@layout/default_list"
        style="@style/GamesList"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>