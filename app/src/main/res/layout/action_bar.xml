<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_bar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:context=".components.ActionBar">


    <ImageButton
        android:id="@+id/action_heart"
        style="@style/ActionImageButton"
        android:src="@drawable/like"
        app:layout_constraintEnd_toStartOf="@+id/action_star"
        android:paddingEnd="25dp"
        />

    <ImageButton
        android:id="@+id/action_star"
        style="@style/ActionImageButton"
        android:src="@drawable/whishlist"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/view_title"
        style="@style/ViewTitle"
        android:text="@string/template_view_title"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>