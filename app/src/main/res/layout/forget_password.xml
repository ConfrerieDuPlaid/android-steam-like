<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forget_password">

    <TextView
        android:id="@+id/subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de asse oublié"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/top_forget_password_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veuillez saisir votre email"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subscribe"
        android:gravity="center"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/bottom_forget_password_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" afin de réinitialiser votre mot de passe"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_forget_password_message"
        android:gravity="center"
        />



    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="E-mail"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/bottom_forget_password_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/connection_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button_home_shape"
        android:backgroundTint="#5D63DE"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Renvoyer mon mot de passe"
        android:fontFamily="@font/proxima_nova_font"
        app:layout_constraintTop_toBottomOf="@+id/bottom_forget_password_message"
        />

</androidx.constraintlayout.widget.ConstraintLayout>