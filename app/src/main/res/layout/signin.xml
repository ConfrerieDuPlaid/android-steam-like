<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signin">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp"/>

    <TextView
        android:id="@+id/subscribe"
        style="@style/Title"
        android:text="Inscription"
        app:layout_constraintTop_toTopOf="@id/top_guideline"
        />

    <TextView
        android:id="@+id/welcome_message"
        style="@style/Subtitle"
        android:text="Veuillez saisir ces différentes informations, afin que vos listes soient sauvegardées."
        app:layout_constraintTop_toBottomOf="@+id/subscribe"
        />

    <EditText
        android:id="@+id/username"
        style="@style/TextInput"
        android:layout_marginTop="50dp"
        android:hint="Nom d'utilisateur"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message"
        />

    <EditText
        android:id="@+id/user_email"
        style="@style/EmailInput"
        android:hint="E-mail"
        app:layout_constraintTop_toBottomOf="@+id/username"
        />

    <EditText
        android:id="@+id/user_password"
        style="@style/PasswordInput"
        android:hint="Mot de passe"
        app:layout_constraintTop_toBottomOf="@+id/user_email"
        />

    <EditText
        android:id="@+id/user_password_verification"
        style="@style/PasswordInput"
        android:hint="Mot de passe"
        app:layout_constraintTop_toBottomOf="@+id/user_password"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signin_button"
        style="@style/AccentActionButton"
        android:text="S'inscrire"
        app:layout_constraintTop_toBottomOf="@+id/user_password"
        />


</androidx.constraintlayout.widget.ConstraintLayout>