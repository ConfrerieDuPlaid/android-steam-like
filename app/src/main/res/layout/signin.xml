<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signin">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="50dp"/>

    <TextView
        android:id="@+id/subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_guideline"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Veuillez saisir ces différentes informations, afin que vos listes soient sauvegardées."
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subscribe"
        android:gravity="center"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Nom d'utilisateur"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="E-mail"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Mot de passe"
        app:layout_constraintTop_toBottomOf="@+id/user_email"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/user_password_verification"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_shape"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Mot de passe"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/user_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signin_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button_home_shape"
        android:backgroundTint="#5D63DE"
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="S'inscrire"
        android:fontFamily="@font/proxima_nova_font"
        app:layout_constraintTop_toBottomOf="@+id/user_password"
        />


</androidx.constraintlayout.widget.ConstraintLayout>