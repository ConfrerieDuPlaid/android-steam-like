<resources>
    <!-- Base application theme. -->
    <style name="Theme.Androidsteamlike" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fontFamily">@font/proxima_nova_font</item>
        <item name="fontFamily">@font/proxima_nova_font</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/background</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WrappedText" parent="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TitleText" parent="WrappedText">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Title" parent="TitleText">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="fontFamily">@font/google_sans_bold</item>
    </style>

    <style name="Subtitle" parent="TitleText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ViewTitle" parent="WrappedText">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="fontFamily">@font/google_sans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ViewIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="ActionButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AccentActionButton" parent="ActionButton">
        <item name="android:backgroundTint">@color/lavender</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="SideActionButton" parent="AccentActionButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="LargeActionButton" parent="ActionButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LargeAccentActionButton" parent="LargeActionButton">
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:backgroundTint">@color/lavender</item>
    </style>

    <style name="LargeNoAccentActionButton" parent="LargeActionButton">
        <item name="android:background">@drawable/button_no_accent</item>
    </style>

    <style name="NarrowActionButton" parent="ActionButton">
        <item name="fontFamily">@font/google_sans_bold</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="NarrowAccentActionButton" parent="NarrowActionButton">
        <item name="android:backgroundTint">@color/lavender</item>
        <item name="android:background">@drawable/button</item>
        <item name="fontFamily">@font/proxima_nova_font</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="PasswordInput" parent="TextInput">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EmailInput" parent="TextInput">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="ActionImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="GamesList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="TextError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StarIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/star</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>
    
    <style name="CardCoverImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">10dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="BannerImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="CardMainText" parent="WrappedText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardDescText" parent="WrappedText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LargeText" parent="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">start</item>
    </style>
</resources>